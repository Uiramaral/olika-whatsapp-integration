PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# Token compartilhado entre Laravel e o bot (header x-olika-token)
WEBHOOK_TOKEN=troque-por-um-token-seguro

# Código do país (ex.: 55 = Brasil)
DEFAULT_COUNTRY_CODE=55

# Caminho de armazenamento da sessão autenticada
SESSION_FOLDER=./session

# API opcional para lembretes de clientes inativos
CRM_INACTIVE_ENDPOINT=
CRM_TOKEN=

# Timezone utilizado pelo node-cron
CRON_TIMEZONE=America/Sao_Paulo

